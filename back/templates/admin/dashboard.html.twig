{% extends 'base.html.twig' %}

{% block title %}Garage V. Parrot - Administration{% endblock %}

{% block body %}
<div class="container">
    <header class="jumbotron text-center mt-4 bg-dark text-white animate__animated animate__fadeInDown">
        <h1 class="display-4">Panneau d'administration</h1>
        <p class="lead">Gérez les services, les véhicules, les contacts et les utilisateurs de votre garage.</p>
    </header>

    <section class="text-center py-5 animate__animated animate__fadeInUp">
        <h2 class="mb-4">Gestion des Services</h2>
        <div class="row">
            <div class="col-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.2s;">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Modifier les Services</h5>
                        <p class="card-text">Ajoutez, modifiez ou supprimez des services proposés par le garage.</p>
                        <a href="{{ path('app_service') }}" class="btn btn-primary">Gérer les Services</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.4s;">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Gérer les Véhicules</h5>
                        <p class="card-text">Mettez à jour les informations sur les véhicules d'occasion disponibles.</p>
                        {#<a href="{{ path('admin_vehicles') }}" class="btn btn-primary">Gérer les Véhicules</a>#}
                    </div>
                </div>
            </div>
            <div class="col-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.6s;">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Gérer les horaires</h5>
                        <p class="card-text">Modifiez les horaires d'ouverture du garage.</p>
                        <a href="{{ path('app_opening_hours') }}" class="btn btn-primary">Modifier les horaires</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Nouvelle section : Gestion des utilisateurs -->
    <section class="text-center py-5 bg-light animate__animated animate__fadeInUp">
        <h2 class="mb-4">Gestion des Utilisateurs</h2>
        <div class="row">
            <div class="col-md-4 offset-md-4 animate__animated animate__zoomIn" style="animation-delay: 0.8s;">
                <div class="card border-0 shadow">
                    <div class="card-body">
                        <h5 class="card-title">Gérer les Utilisateurs</h5>
                        <p class="card-text">Ajouter, modifier ou supprimer les utilisateurs administratifs.</p>
                        <a href="{{ path('user_index') }}" class="btn btn-primary">Gérer les Utilisateurs</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="text-center bg-light py-5 animate__animated animate__fadeInUp">
        <h2 class="mb-4">Statistiques et Rapports</h2>
        <p class="mb-5">Consultez les statistiques de performance et les rapports d'activité.</p>
        <div class="row">
            <div class="col-md-6 animate__animated animate__fadeInLeft">
                <img src="path/to/your/statistics.jpg" class="img-fluid mb-3" alt="Statistiques">
            </div>
            <div class="col-md-6 animate__animated animate__fadeInRight">
                <img src="path/to/your/reports.jpg" class="img-fluid mb-3" alt="Rapports">
            </div>
        </div>
        {#<a href="{{ path('admin_reports') }}" class="btn btn-primary btn-lg mt-4 animate__animated animate__fadeInUp">Voir les Rapports</a>#}
    </section>

    <section class="text-center py-5 animate__animated animate__fadeInUp">
        <h2 class="mb-4">Paramètres du Compte</h2>
        <p class="mb-5">Modifiez les informations de votre compte ou changez les paramètres administratifs.</p>
        {#<a href="{{ path('admin_settings') }}" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">Paramètres du Compte</a>#}
    </section>
</div>
{% endblock %}
