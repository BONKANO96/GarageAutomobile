{% extends 'base.html.twig' %}

{% block title %}Modifier une voiture d'occasion{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Modifier une voiture d'occasion</h1>
    <div class="card shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.price, null, {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.price) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.year, null, {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.year, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.year) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.mileage, null, {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.mileage, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.mileage) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.mainImage, null, {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.mainImage, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.mainImage) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        {{ form_label(form.gallery, null, {'attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.gallery, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.gallery) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, null, {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.description) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.features, null, {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.features, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.features) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.options, null, {'attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.options, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    {{ form_errors(form.options) }}
                </div>
                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                <a href="{{ path('app_car_index') }}" class="btn btn-secondary ms-2">Retour</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
