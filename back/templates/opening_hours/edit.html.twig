{% extends 'base.html.twig' %}

{% block title %}Modifier Horaires{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Modifier Horaires d'ouverture</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, { 'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'} }) }}
                        <div class="mb-3">
                            {{ form_label(form.day, 'Jour de la semaine', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.day, { 'attr': {'class': 'form-select'} }) }}
                            {{ form_errors(form.day) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.openingTime, 'Heure d\'ouverture', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.openingTime, { 'attr': {'class': 'form-select'} }) }}
                            {{ form_errors(form.openingTime) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.closingTime, 'Heure de fermeture', { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.closingTime, { 'attr': {'class': 'form-select'} }) }}
                            {{ form_errors(form.closingTime) }}
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                            <a href="{{ path('app_opening_hours') }}" class="btn btn-secondary">Retour</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
