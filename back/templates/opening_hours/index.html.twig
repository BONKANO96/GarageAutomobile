{% extends 'base.html.twig' %}

{% block title %}Horaires d'ouverture{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Horaires d'ouverture du garage</h1>

        <!-- Bouton pour revenir à la page admin -->
        <a href="{{ path('admin') }}" class="btn btn-primary">Retour à l'admin</a>
        <!-- <a href="{{ path('app_opening_hours_new') }}" class="btn btn-primary">Ajouter un horaire</a> -->
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Jour</th>
                    <th>Ouverture</th>
                    <th>Fermeture</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for openingHour in opening_hours %}
                    <tr>
                        <td>{{ openingHour.day }}</td>
                        <td>{{ openingHour.openingTime }}</td>
                        <td>{{ openingHour.closingTime }}</td>
                        <td>
                            <div class="d-flex">
                                <a href="{{ path('app_opening_hours_edit', { id: openingHour.id }) }}" class="btn btn-secondary btn-sm me-2">Modifier</a>
                                {#<form method="post" action="{{ path('app_opening_hours_delete', { id: openingHour.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet horaire ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ openingHour.id) }}">
                                    <button class="btn btn-danger btn-sm">Supprimer</button>
                                </form>#}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun horaire d'ouverture trouvé</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
