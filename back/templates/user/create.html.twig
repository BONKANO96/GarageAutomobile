{% extends 'base.html.twig' %}

{% block title %}Créer un Nouvel Utilisateur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer un Nouvel Utilisateur</h1>

    {{ form_start(form) }}

        <!-- Nom complet -->
        <div class="form-group">
            {{ form_label(form.lastName, 'Nom') }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            {% if form.lastName.vars.errors is not empty %}
                <div class="text-danger">
                    {{ form_errors(form.lastName) }}
                </div>
            {% endif %}
        </div>

        <div class="form-group">
            {{ form_label(form.firstName, 'Prénom') }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            {% if form.firstName.vars.errors is not empty %}
                <div class="text-danger">
                    {{ form_errors(form.firstName) }}
                </div>
            {% endif %}
        </div>

        <!-- Email -->
        <div class="form-group">
            {{ form_label(form.email, 'Email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            {% if form.email.vars.errors is not empty %}
                <div class="text-danger">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}
        </div>

        <!-- Mot de passe -->
        <div class="form-group">
            {{ form_label(form.plainPassword, 'Mot de passe') }}
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
            {% if form.plainPassword.vars.errors is not empty %}
                <div class="text-danger">
                    {{ form_errors(form.plainPassword) }}
                </div>
            {% endif %}
        </div>

        <!-- Bouton de soumission -->
        <button class="btn btn-primary mt-3">Créer</button>

    {{ form_end(form) }}
</div>
{% endblock %}
