{% extends 'base.html.twig' %}

{% block title %}Gestion des Services{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Gestion des Services</h1>

    <a href="{{ path('app_service_create') }}" class="btn btn-primary mb-4">Ajouter un Service</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.nom }}</td>
                    <td>{{ service.description }}</td>
                    <td>
                        <a href="{{ path('app_service_edit', { id: service.id }) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        <form action="{{ path('app_service_delete', { id: service.id }) }}" method="post" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center">Aucun service trouv√©</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
