{# templates/service/create.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Créer Service{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-4">Créer un Nouveau Service</h1>

    {{ form_start(form, { 'attr': { 'class': 'mt-4' } }) }}
        <div class="form-group">
            {{ form_label(form.nom, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group mt-4">
            {{ form_label(form.description, null, { 'label_attr': { 'class': 'form-label' } }) }}
            {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.description) }}
        </div>

        <button type="submit" class="btn btn-primary mt-4">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_service') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
</div>
{% endblock %}
